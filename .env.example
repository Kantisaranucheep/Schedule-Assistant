# schedule-assistant/.env.example

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/schedule_assistant

# Application
APP_NAME=Schedule Assistant
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# CORS
CORS_ORIGINS=http://localhost:3000

# Default settings
DEFAULT_TIMEZONE=Asia/Bangkok
DEFAULT_WORKING_HOURS_START=09:00
DEFAULT_WORKING_HOURS_END=18:00

# ============================================================================
# Agent Module (LLM Intent Parsing)
# ============================================================================

# LLM Provider: "ollama" or "gemini"
AGENT_LLM_PROVIDER=ollama

# Ollama settings (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Gemini settings (Google AI)
# Uncomment and set your API key to use Gemini
# GEMINI_API_KEY=your-gemini-api-key
# GEMINI_MODEL=gemini-1.5-flash

# ============================================================================
# Prolog Integration
# ============================================================================

# Mode: "subprocess" (spawn swipl) or "service" (HTTP API)
PROLOG_MODE=subprocess

# Path to Prolog files (for subprocess mode)
PROLOG_PATH=../../apps/prolog

# Prolog service URL (for service mode)
PROLOG_SERVICE_URL=http://localhost:8081
